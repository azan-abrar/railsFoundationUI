<div ng-switch="showNavigationBar">
  <nav class="top-bar hide-for-small" ng-switch-when="true">
    <ul class="title-area">
      <li class="name">
        <h1>
          <a href="#/employees">
            <%= image_tag("/assets/confiz-logo.png") %> HRM
          </a>
        </h1>
      </li>
    </ul>
    <section class="top-bar-section">
      <ul class="left">
        <li ng-controller="EmployeesController">
          <form id="searchEmployees">
            <div class="row collapse">
              <div class="small-8 columns">
                <input type="text" placeholder="Search Here" name="searchField" ng-model="searchField" ui-keydown="{13:'searchEmployees()'}">
              </div>
              <div class="small-4 columns">
                <a href="javascript:void(0);" class="button" ng-click="searchEmployees()">Search</a>
              </div>
            </div>
          </form>
        </li>
      </ul>
      <ul class="right">
        <% if current_user && current_user.admin? %>
        <li class=""><a href="/companies">Companies</a></li>
        <% end %>
        <li class=""><a href="#/employees">Employees</a></li>
        <li class=""><a href="#/departments">Departments</a></li>
        <li class="dark" ng-controller="LoginController">
          <a href="#" ng-click="logout()">Log Out</a>
        </li>
      </ul>
    </section>
  </nav>
</div>