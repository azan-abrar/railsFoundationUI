<div ng-switch="showNavigationBar">
  <div class="navigation-header" ng-switch-when="true">
    <nav class="top-bar hide-for-small" data-options="is_hover:false;">
      <ul class="title-area">
        <li class="name">
          <h1>
            <a href="#/">
              <%= image_tag( (current_user.employee.company.logo.url rescue "/assets/confiz-logo.png") ) %>
            </a>
          </h1>
        </li>
      </ul>

      
      <section class="top-bar-section">
        <ul class="right">
          <% unless current_user.blank? %>
          <li class=""><a href="#/">Home</a></li>
          <li class=""><a href="#">Company</a></li>
          <li class=""><a href="#/employees">Employees</a></li>
          <li class=""><a href="#/departments">Departments</a></li>
          <li ng-controller="EmployeesController">
            <form id="searchEmployees">
              <div class="row collapse">
                <div class="small-8 columns">
                  <input type="text" placeholder="Search Here" name="searchField" ng-model="searchField" ui-keydown="{13:'searchEmployees()'}">
                </div>
                <div class="small-4 columns">
                  <a href="javascript:void(0);" class="button" ng-click="searchEmployees()">Search</a>
                </div>
              </div>
            </form>
          </li>
          <li class="has-dropdown">
            <a href="#" class="parent"><i class="accessibility fi-torso-business medium"></i>&nbsp;</a>
            <ul class="dropdown">
              <li class="welcome"><a href="javascript:void(0);"><%= current_user.name %>!</a></li>
              <li class="divider hide-for-small"></li>
              <li class=""><a href="#">Admin Settings</a></li>
              <li class=""><a href="/#/employee/<%= current_user.employee.uuid %>">Account Settings</a></li>
              <li class="divider hide-for-small"></li>
              <li ng-controller="LoginController"><a href="#" ng-click="logout()">Log Out</a></li>
            </ul>
          </li>
          
          <li class="highlighted"><a href="#/employee/new">Add Employee</a></li>
          <% else %>
          <li class=""><a href="#/">Home</a></li>
          <li class=""><a href="#">Company</a></li>
          <li class=""><a href="#">Blog</a></li>

          <li class="dark"><a href="#/login">Sign In</a></li>
          <li class="highlighted"><a href="#/signup">Sign Up</a></li>
          <% end %>
        </ul>


        <% if false %>
        <li class="welcome"><a href="javascript:void(0);">Welcome <%= current_user.employee.full_name %>!</a></li>
        <li class="has-dropdown not-click">
          <a href="/companies" class="parent">Companies</a>
          <ul class="dropdown">
            <li class=""><a href="/companies/new">New Company</a></li>
          </ul>
        </li>
        <li class=""><a href="#/employees">Employees</a></li>
        <li class=""><a href="#/departments">Departments</a></li>

        <li class="dark has-dropdown not-click">
          <a href="javascript:void(0);" class="parent">Account Settings</a>
          <ul class="dropdown">
            <li class=""><a href="/#/employee/<%= current_user.employee.uuid %>">My Profile</a></li>
            <li ng-controller="LoginController"><a href="#" ng-click="logout()">Log Out</a></li>
          </ul>
        </li>
        <% end %>

        <%# if current_user && current_user.admin? %>

        
      </section>
      
    </nav>
  </div>
</div>